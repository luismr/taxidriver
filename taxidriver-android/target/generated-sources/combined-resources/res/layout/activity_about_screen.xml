<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/app_title"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/labelApplication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_icon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="@string/app_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/labelVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_icon"
        android:layout_alignLeft="@+id/labelApplication"
        android:text="@string/about_version"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/labelDevelopedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_icon"
        android:layout_below="@+id/img_icon"
        android:layout_marginTop="35dp"
        android:text="@string/about_developed_by"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_also_visit_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_also_visit_2"
        android:layout_below="@+id/img_also_visit_2"
        android:contentDescription="@string/app_title"
        android:src="@drawable/logo_also_visit_3" />

    <TextView
        android:id="@+id/labelAlsoVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelDevelopedBy"
        android:layout_centerVertical="true"
        android:text="@string/about_also_visit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_also_visit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelAlsoVisit"
        android:layout_below="@+id/labelAlsoVisit"
        android:contentDescription="@string/app_title"
        android:src="@drawable/logo_also_visit_1" />

    <ImageView
        android:id="@+id/img_also_visit_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_also_visit_1"
        android:layout_below="@+id/img_also_visit_1"
        android:contentDescription="@string/app_title"
        android:src="@drawable/logo_also_visit_2" />

    <ImageView
        android:id="@+id/img_developed_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labelDevelopedBy"
        android:layout_below="@+id/labelDevelopedBy"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_title"
        android:src="@drawable/logo_singularideas" />

</RelativeLayout>